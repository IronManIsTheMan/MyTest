<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Name:"/>

        <EditText
            android:id="@+id/customer_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gender_area"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Gender:"/>

        <RadioGroup android:id="@+id/genderGroup"
            android:contentDescription="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioMale"
                android:text="Male"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioFemale"
                android:text="Fmale"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/age"
        android:layout_below="@id/gender_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Age:"/>

        <EditText
            android:id="@+id/customer_age"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number"
        android:layout_below="@id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Tel:"/>

        <EditText
            android:id="@+id/customer_tel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="phone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/desp"
        android:layout_below="@id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Detail"/>

        <EditText
            android:id="@+id/customer_desp"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@drawable/desp_boarder"
            android:scrollbars="vertical"
            android:gravity="left|top"
            android:textSize="16sp"
            android:scrollHorizontally="false"
            android:inputType="textMultiLine"/>

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_marginTop="10dp"
        android:layout_below="@id/desp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/desp"
        android:text="Modify"/>

</RelativeLayout>
